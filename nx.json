{
  "$schema": "node_modules/nx/schemas/nx-schema.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "format:write",
          "format",
          "lint:write",
          "lint",
          "check-types",
          "compile",
          "build"
        ]
      }
    }
  },
  "targetDefaults": {
    "compile": {
      "outputs": [
        "{projectRoot}/dist"
      ],
      "dependsOn": ["^build"]
    }
  }
}
