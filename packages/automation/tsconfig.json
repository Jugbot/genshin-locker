{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "types": ["vite/client", "node", "electron"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
