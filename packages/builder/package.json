{
  "name": "@gl/builder",
  "version": "0.0.0",
  "description": "> TODO: description",
  "author": "Lucas Pollice <lp1935@nyu.edu>",
  "homepage": "https://github.com/Jugbot/genshin-locker#readme",
  "license": "ISC",
  "main": "src/index.ts",
  "files": [
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jugbot/genshin-locker.git"
  },
  "scripts": {
    "format:write": "prettier . -u --ignore-path=\"../../.gitignore\" --write",
    "format": "prettier . -u --ignore-path=\"../../.gitignore\" --check",
    "lint:write": "eslint . --max-warnings=0 --ignore-path=\"../../.gitignore\" --fix",
    "lint": "eslint . --max-warnings=0 --ignore-path=\"../../.gitignore\"",
    "check-types": "tsc --noEmit",
    "compile": "electron-builder build --dir --config.asar=false"
  },
  "build": {
    "directories": {
      "output": "dist",
      "buildResources": "buildResources"
    },
    "files": [
      "../**/dist/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "extraMetadata": {
      "main": "../../../../../main/dist/index.cjs"
    },
    "beforePack": "./beforePack.js"
  },
  "bugs": {
    "url": "https://github.com/Jugbot/genshin-locker/issues"
  },
  "devDependencies": {
    "typescript": "^4.9.0",
    "electron-builder": "23.6.0",
    "electron": "20.0.0",
    "eslint": "^8.0.1"
  }
}
