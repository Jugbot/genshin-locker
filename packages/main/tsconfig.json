{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "vite.config.ts"],
  "exclude": ["**/*.test.ts"]
}
